<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CtrlLogin</servlet-name>
        <servlet-class>com.control.usuario.CtrlLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlCerrarSesion</servlet-name>
        <servlet-class>com.control.usuario.CtrlCerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlComboLoader</servlet-name>
        <servlet-class>com.util.CtrlComboLoader</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlUsuario</servlet-name>
        <servlet-class>com.control.usuario.CtrlUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlRestablecerContrasena</servlet-name>
        <servlet-class>com.control.usuario.CtrlRestablecerContrasena</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ctrlFactura</servlet-name>
        <servlet-class>com.control.factura.ctrlFactura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ctrlFacturaMovimiento</servlet-name>
        <servlet-class>com.control.factura.ctrlFacturaMovimiento</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlLogin</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlCerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlComboLoader</servlet-name>
        <url-pattern>/ComboLoader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlUsuario</servlet-name>
        <url-pattern>/Usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlRestablecerContrasena</servlet-name>
        <url-pattern>/RestablecerContrasena</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ctrlFactura</servlet-name>
        <url-pattern>/Factura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ctrlFacturaMovimiento</servlet-name>
        <url-pattern>/FacturaMovimiento</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>jsp_general/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
