Ext.onReady(function() {
    Ext.QuickTips.init();
    var form = Ext.create('Ext.form.Panel', {
        id:'formLogin',
        renderTo: 'divLogin',
        frame: true,
        height: 270,
        width: 350,
        bodyPadding: 10,
        bodyBorder: true,
        autoHeight: true,
        title: '- Bienvenido Ingrese su usuario y contraseña -',
        fieldDefaults: {
            labelAlign: 'top'
        //,msgTarget: 'side'
        },
        //declaracion de componentes textfield´s en columnas
        layout:'column',
        items: [{
            xtype: 'container',
            columnWidth: 0.5,
            items: [Ext.create('Ext.Img', {
                src: contexto+'/img/logoArgo2.jpg',
                height:100,
                width :135
            })]
        },{
            xtype: 'container',
            columnWidth:0.4,
            defaultType: 'textfield',
            items: [{
                id:'user',
                name: 'usuario',
                fieldLabel: 'Usuario',
                allowBlank: false,
                maxWidth :250,
                enableKeyEvents:true,
                listeners:{
                    'keypress':
                    function(txtField,e){
                        saveFieldToCookie(ckUtil,'user');
                        if(e.keyCode==13){                           
                            accesar();
                        }
                    }
                }
            },{
                id:'pssw',
                name: 'contrasena',
                fieldLabel: 'Contraseña',
                inputType: 'password',
                allowBlank: false,
                maxWidth :250,
                enableKeyEvents:true,
                listeners:{
                    'keypress':
                    function(txtField,e){
                        if(e.keyCode==13){
                            saveFieldToCookie(ckUtil,'user');
                            accesar();
                        }
                    }
                }
            }]
        }],
        //declaracion de buttons
        buttons: [{
            xtype: 'button',
            id:'btnEntrar',
            text: 'Enviar',
            width: 95,
            handler: function() {
                accesar();
            }
        },{
            xtype:'button',
            text:'Limpiar',
            width:95,
            handler:function(){
                this.up('form').getForm().reset();
                Ext.getCmp('btnEntrar').enable();
            }
        }]
    });
});

function accesar(){
    var form=Ext.getCmp('formLogin').getForm();
    if (form.isValid()) {
        Ext.getCmp('btnEntrar').disable();
        form.submit({
            clientValidation: true,
            url:  contexto+'/Usuario?bnd=1',
            success: function(form, action) {
                var dir=action.result.url;
                var user=action.result.usua;
                //window.location =  contexto+dir;
                document.getElementById("usuario").value=user;
                document.formLog.submit();
            },
            failure: function(form, action) {
                var msg1="";
                msg1=action.result.msg;
                Ext.Msg.show({
                    title: 'Datos Incorrectos',
                    msg: msg1,
                    buttons: Ext.MessageBox.OK,
                    icon: Ext.MessageBox.WARNING
                });
            }
        });
    }else{
        Ext.Msg.show({
            title: 'Datos Incompletos',
            msg: 'Debe completar todos los campos !',
            buttons: Ext.MessageBox.OK,
            icon: Ext.MessageBox.WARNING
        });
    }
}
