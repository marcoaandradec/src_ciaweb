function getDetFactura(idFactura,bndFact){
    var formAct =new com.punto.pen.PanelInfoFacturas({
        id:'idActPacFrm',
        url:contexto+'/Factura',
        'idCnt':idFactura,
        'bndFact':bndFact,
        bnd:1,
        alto:465,
        obsTF:false,
        border:false
    }).crearFichaFactura();
    var wnd = new  Ext.Window({
        id:'idTabFactura',
        width:750,
        height:450,
        constrainHeader :true,
        modal:true,
        border:false,
        autoScroll:true,
        draggable:true,
        resizable:true,
        bodyStyle: 'padding:5px;',
        title:'Información Factura '+idFactura,
        items:[formAct],
        buttons:[ {
            text:'cerrar',
            handler:function(){
                wnd.close();
            }
        }
        ],
        tools:[{
            id:'close',
            qtip: 'Cerrar',
            handler: function(event, toolEl, panel){
                wnd.close();
            }
        }
        ]
    });
    wnd.show();
    loadFormulario(formAct,{
        url:contexto+'/Factura',
        'idCnt':idFactura,
         'bndFact':bndFact,
        bnd:1
    });
}
